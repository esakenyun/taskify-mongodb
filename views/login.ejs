<section class="bg-gray-50 min-h-screen flex items-center justify-center">
  <!-- login container -->
  <div class="bg-gray-100 flex rounded-2xl shadow-lg max-w-3xl p-5 items-center">
    <!-- form -->
    <div class="md:w-1/2 px-8 md:px-16">
      <h2 class="font-bold text-2xl text-slate-900">Login</h2>
      <p class="text-xs mt-4 text-slate-900">If you are already a member, easily log in</p>

      <% if (success_msg != '') { %>
      <div id="alertbox">
        <div class="rounded mt-2 rounded-lg bg-green-500 flex items-center text-white text-sm font-semibold px-4 py-3 relative" role="alert">
          <svg class="fill-current w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
            <path
              d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z" />
          </svg>
          <p><%= success_msg %></p>

          <span class="absolute top-0 bottom-0 right-0 px-4 py-3 closealertbutton" role="button" onclick="closeAlert(this)">
            <svg class="fill-current h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
              <title>Close</title>
              <path
                d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z" />
            </svg>
          </span>
        </div>
      </div>
      <% } %> <% if (error != '') { %>
      <div id="alertbox">
        <div class="rounded mt-2 rounded-lg bg-red-500 flex items-center text-white text-sm font-semibold px-4 py-3 relative" role="alert">
          <svg class="fill-current w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
            <path
              d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z" />
          </svg>
          <p><%= error %></p>

          <span class="absolute top-0 bottom-0 right-0 px-4 py-3 closealertbutton" role="button" onclick="closeAlert(this)">
            <svg class="fill-current h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
              <title>Close</title>
              <path
                d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z" />
            </svg>
          </span>
        </div>
      </div>
      <% } %>
      <form method="post" action="/login" class="flex flex-col gap-4">
        <input class="p-2 mt-8 rounded-xl border" type="email" name="email" :value="old('email')" required autofocus autocomplete="username" placeholder="Email" />
        <div class="relative">
          <input class="p-2 rounded-xl border w-full" type="password" name="password" id="password" placeholder="Password" required />
        </div>
        <button type="submit" class="bg-slate-900 rounded-xl mt-5 text-white py-2 hover:scale-105 duration-300">Login</button>
      </form>

      <div class="mt-5 text-xs border-b border-slate-900 py-4 text-slate-900"></div>

      <div class="mt-3 text-xs flex justify-between items-center text-slate-900">
        <p>Don't have an account?</p>
        <a href="/signup" class="py-2 px-5 text-slate-900 bg-blue-200 border rounded-xl hover:scale-110 duration-300">Register</a>
      </div>
    </div>

    <!-- image -->
    <div class="md:block hidden w-1/2">
      <img class="rounded-2xl" src="https://images.unsplash.com/photo-1553034545-32d4cd2168f1?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8N3x8dGFza3xlbnwwfDF8MHx8fDA%3D" />
    </div>
  </div>
</section>

<script>
  setTimeout(function () {
    document.getElementById("alertbox").style.display = "none";
  }, 2500);

  function closeAlert(element) {
    element.parentNode.parentNode.remove();
  }
</script>
